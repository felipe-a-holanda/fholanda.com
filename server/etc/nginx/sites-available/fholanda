upstream app_server_fholanda {
    server unix:/home/django/gunicorn-fholanda.socket fail_timeout=0;
}

server {
    server_name fholanda.com www.fholanda.com;

    root /usr/share/nginx/html;
    index index.html index.htm;

    client_max_body_size 4G;


    keepalive_timeout 5;

    # Your Django project's media files - amend as required
    location /media  {
        alias /home/django/fholanda.com/fholanda/media;
    }

    # your Django project's static files - amend as required
    location /static {
        alias /home/django/fholanda.com/fholanda/static;
    }

    # Proxy the static assests for the Django Admin panel
    location /static/admin {
       alias /home/django/.virtualenvs/fholanda/lib/python3.6/site-packages/django/contrib/admin/static/admin/;
    }

    location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $host;
            proxy_redirect off;
            proxy_buffering off;

            proxy_pass http://app_server_fholanda;
    }


    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/fholanda.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/fholanda.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot




}


server {
    if ($host = www.fholanda.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = fholanda.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name fholanda.com www.fholanda.com;
    listen 80 ;
    listen [::]:80 ;
    return 404; # managed by Certbot




}